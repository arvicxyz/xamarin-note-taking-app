<?xml version="1.0" encoding="UTF-8"?>
<resources>
    <style name="Theme.Splash"
           parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item> 
    </style>
    <style name="Theme.Main"
           parent="Theme.Main.Base">
    </style>
    <style name="Theme.Main.Base"
           parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="buttonStyle">@style/Theme.Button</item>
        <item name="android:buttonStyle">@style/Theme.Button</item>
        <item name="editTextStyle">@style/Theme.EditText</item>
        <item name="android:editTextStyle">@style/Theme.EditText</item>
        <item name="alertDialogTheme">@style/Theme.AlertDialog</item>
        <item name="android:alertDialogTheme">@style/Theme.AlertDialog</item>
        <item name="android:colorPressedHighlight">@color/list_view_selected</item>
        <item name="android:colorLongPressedHighlight">@color/list_view_highlighted</item>
        <item name="android:colorFocusedHighlight">@color/list_view_selected</item>
        <item name="android:colorActivatedHighlight">@color/list_view_selected</item>
        <item name="android:activatedBackgroundIndicator">@color/list_view_selected</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
    <style name="Theme.Button"
           parent="android:Widget.Material.Button">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/button_font_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    <style name="Theme.EditText"
           parent="android:Widget.EditText">
        <item name="android:padding">5dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">@dimen/input_font_size</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textColorHint">@color/secondary_text</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:background">@drawable/edittext_rounded_border</item>
    </style>
    <style name="Theme.AlertDialog"
           parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:buttonBarPositiveButtonStyle">@style/Theme.AlertDialog.PositiveButton</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/Theme.AlertDialog.NegativeButton</item>
    </style>
    <style name="Theme.AlertDialog.PositiveButton"
           parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/button_font_size</item>
        <item name="android:textColor">@color/accent</item>
    </style>
    <style name="Theme.AlertDialog.NegativeButton"
           parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/button_font_size</item>
        <item name="android:textColor">@color/accent</item>
    </style>
</resources>